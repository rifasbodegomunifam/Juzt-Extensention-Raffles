{% set raffle_prizes = get_post_meta("_raffle_prizes", post.id) %}
{% set raffle_gallery  = get_post_meta("_raffle_gallery", post.id) %}
{% set raffle_date  = get_post_meta("_raffle_date", post.id) %}
{% set raffle_price  = get_post_meta("_raffle_price", post.id) %}
{% set raffle_price_cop = exchange_api_convert(raffle_price, "usd", "cop") %}
{% set raffle_price_ves = exchange_api_convert(raffle_price, "usd", "ves") %}


{% set share_title = "¡Participa en " ~ post.title ~ "!" %}
{% set share_description = "Sorteo de " ~ post.title ~ " - No te lo pierdas" %}
{% set share_uri = post.link %}


<style>
	.custom-scrollbar::-webkit-scrollbar {
		width: 6px;
	}
	.custom-scrollbar::-webkit-scrollbar-track {
		background: #1a1a1a;
	}
	.custom-scrollbar::-webkit-scrollbar-thumb {
		background: #4b5563;
		border-radius: 3px;
	}
	.tab-button.active {
		border-bottom: 3px solid #ef4444;
		color: white;
	}
</style>

<div class="min-h-screen py-8">
	<div class="px-4 mx-auto md:px-4 max-w-7xl">

		<!-- Grid Principal: 2 Columnas -->
		<div
			class="grid gap-6 lg:grid-cols-4">

			<!-- COLUMNA IZQUIERDA - 2/3 del ancho -->
			<div
				class="space-y-6 lg:col-span-2">

				<!-- Imagen del Producto -->
				<div
					class="bg-[#1a1a1a] rounded-xl">

					{% if raffle_gallery | length > 1  %}

					<raffle-gallery class="block" config='{"perPage": 1, "pagination": true, "perMove": 1, "type": "loop", "rewind": true, "arrows": false}'>
						{% for image in raffle_gallery %}
						<li class="w-full h-full border border-gray-800 rounded-xl splide__slide">
							<figure class="mb-0! w-full h-full overflow-hidden rounded-xl">
								<img loading="lazy" class="object-cover w-full h-full rounded-xl" src="{{ image | attachment_url }}" alt="Slide Raffle" />
							</figure>
						</li>
						{% endfor %}
					</raffle-gallery>

					{% else %}
					<figure class="mb-0! w-full h-full overflow-hidden rounded-xl border border-gray-800">
						<img loading="lazy" class="object-cover w-full h-full rounded-xl" src="{{ raffle_gallery[0] | attachment_url }}" alt="Raffle Image" />
					</figure>
					{% endif %}
				</div>

				<!-- Imagen del Producto -->
				<div
					class="bg-[#1a1a1a] rounded-2xl p-4 md:p-6 border border-gray-800">

					<!-- Precio -->
					<div class="p-4 mb-6 border bg-linear-to-br from-red-600/20 to-red-600/5 border-red-600/30 rounded-xl">
						<div class="mb-1 text-sm text-white text-center font-bold">Precio por boleto</div>
						<div class="mb-1 text-md md:text-2xl font-bold text-white text-center">
							{{ format_currency(raffle_price, 'USD') }} | 
							{{ format_currency(raffle_price_cop.conversion_result, 'COP') }} | 
							{{ format_currency(raffle_price_ves.conversion_result, 'VES') }}
						</div>
					</div>

					<!-- Countdown -->
					<div class="p-4 mb-6 text-white bg-red-600 rounded-xl">
						<div class="mb-3 text-center">
							<div class="mb-1 text-sm">Sorteo en:</div>
							<div class="text-md opacity-75">{{ raffle_date|date_format('d M, Y - g:i A') }}</div>
						</div>
						<!--LIT-->
						<raffle-countdown date="{{ raffle_date }}" />
					</div>
				</div>

				<!-- Share -->
				
				{{ snippet('share-banner', { facebook: share_url('facebook', share_uri, share_title), twitter: share_url('twitter', share_uri, share_title), whatsapp: share_url('whatsapp', share_uri, share_title) }) }}

				<!-- Descripción -->
				<div class="bg-[#1a1a1a] rounded-2xl p-4 md:p-6 border border-gray-800">
					<h2 class="mb-4 text-2xl font-bold text-white">Descripción del Premio</h2>

					<div class="mb-5">
						{{ post.content }}
					</div>

					<h3 class="mb-5 text-lg font-bold text-white">Características Principales:</h3>
					<ul class="space-y-2">
						{% for prize in raffle_prizes %}
							<li>
								{{ snippet('prizes-card', { prize: prize }) }}
							</li>
						{% endfor %}
					</ul>
				</div>

				<!-- Cómo Participar -->
				<div class="bg-[#1a1a1a] rounded-2xl p-4 md:p-6 border border-gray-800">
					<h2 class="mb-6 text-2xl font-bold text-white">¿Cómo Participar?</h2>
					<div class="space-y-4">
						<div class="flex gap-4">
							<div class="flex items-center justify-center flex-shrink-0 w-10 h-10 font-bold text-white bg-red-600 rounded-full">1</div>
							<div>
								<h3 class="mb-1 font-semibold text-white">Selecciona tus números</h3>
								<p class="text-sm text-gray-400">Elige uno o más números de la suerte del panel lateral.</p>
							</div>
						</div>
						<div class="flex gap-4">
							<div class="flex items-center justify-center flex-shrink-0 w-10 h-10 font-bold text-white bg-red-600 rounded-full">2</div>
							<div>
								<h3 class="mb-1 font-semibold text-white">Completa tu compra</h3>
								<p class="text-sm text-gray-400">Procede al pago de forma segura.</p>
							</div>
						</div>
						<div class="flex gap-4">
							<div class="flex items-center justify-center flex-shrink-0 w-10 h-10 font-bold text-white bg-red-600 rounded-full">3</div>
							<div>
								<h3 class="mb-1 font-semibold text-white">Recibe tu confirmación</h3>
								<p class="text-sm text-gray-400">Te enviaremos un correo con tus números.</p>
							</div>
						</div>
						<div class="flex gap-4">
							<div class="flex items-center justify-center flex-shrink-0 w-10 h-10 font-bold text-white bg-red-600 rounded-full">4</div>
							<div>
								<h3 class="mb-1 font-semibold text-white">Espera el sorteo</h3>
								<p class="text-sm text-gray-400">El sorteo se realizará en vivo el 15 de Enero, 2025.</p>
							</div>
						</div>
					</div>
				</div>

				<!-- Términos -->
				<div class="bg-[#1a1a1a] rounded-2xl p-4 md:p-6 border border-gray-800">
					<h2 class="mb-4 text-2xl font-bold text-white">Términos y Condiciones</h2>
					<ul class="space-y-2 text-sm text-gray-300">
						<li class="flex gap-2">
							<span class="text-red-600">✓</span>
							La rifa es válida para mayores de 18 años.</li>
						<li class="flex gap-2">
							<span class="text-red-600">✓</span>
							El sorteo será transparente y en vivo.</li>
						<li class="flex gap-2">
							<span class="text-red-600">✓</span>
							El ganador será contactado en 24 horas.</li>
						<li class="flex gap-2">
							<span class="text-red-600">✓</span>
							El premio no es canjeable por dinero.</li>
					</ul>
				</div>

			</div>

			<!-- COLUMNA DERECHA - 1/3 del ancho -->
			<div class="sticky lg:col-span-2 rounded-xl">
				<div class="">
					<div class="bg-[#1a1a1a] rounded-2xl p-4 md:p-6 border border-gray-800">

						<h1 class="mb-1 text-2xl font-bold text-white">{{ post.title }}</h1>


						<!-- Números -->
							<h3 class="mb-3 font-semibold text-white"> Completa tu suerte!</h3>

						<div>
							{{ snippet('raffle-form', {raffle: post.id}) }}
						</div>

						<!-- Trust -->
						<div class="grid grid-cols-3 gap-2 pt-4 border-t border-gray-800">
							<div class="text-center">
								<div class="flex items-center justify-center w-10 h-10 mx-auto mb-1 rounded-lg bg-red-600/20">
									<svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
									</svg>
								</div>
								<div class="text-xs text-gray-400">Seguro</div>
							</div>
							<div class="text-center">
								<div class="flex items-center justify-center w-10 h-10 mx-auto mb-1 rounded-lg bg-red-600/20">
									<svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
									</svg>
								</div>
								<div class="text-xs text-gray-400">Verificado</div>
							</div>
							<div class="text-center">
								<div class="flex items-center justify-center w-10 h-10 mx-auto mb-1 rounded-lg bg-red-600/20">
									<svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
									</svg>
								</div>
								<div class="text-xs text-gray-400">Gratis</div>
							</div>
						</div>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>

