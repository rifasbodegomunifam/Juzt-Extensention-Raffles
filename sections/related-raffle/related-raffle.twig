{% set related_post = get_related_post(post, 5, {
    'meta_query': [
        {
            'key': '_raffle_status',
            'value': 'active',
            'compare': '='
        }
    ]
}) %}

{% if related_post.found_posts > 0 %}
	<div class="my-8">
		<div class="px-4 mx-auto md:px-4 max-w-7xl">
			<h2 class="mb-6 text-2xl font-bold text-white">Te puede interesar</h2>
			<div class="grid gap-6 grid-cols-1 lg:grid-cols-2!">
				{% for raffle in related_post %}
					{{ snippet('raffle-card', {raffle: raffle}) }}
				{% endfor %}
			</div>
		</div>
	</div>
{% endif %}
