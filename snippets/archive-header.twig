<header class="w-full px-5 py-3 mb-5 border border-gray-800 rounded-lg">
    <main class="grid grid-cols-3 gap-3">
        <h3 class="text-left text-2xl font-bold text-red-800">{{ title }}</h3>
        <form></form>
        <nav>
            <ul class="flex gap-4">
                {% for page in posts.pagination.pages %}
                <li>
                    <a class="cursor-pointer block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors rounded-lg" href="{{ page.link }}">{{ page.title }}</a>
                </li>
                {% endfor %}
            </ul>
        </nav>
    </main>
</header>